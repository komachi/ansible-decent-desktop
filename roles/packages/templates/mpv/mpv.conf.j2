fs=yes
ontop=yes
force-window=immediate
stop-screensaver=yes
player-operation-mode=pseudo-gui
save-position-on-quit

hwdec=vaapi
hwdec-codecs=all

ytdl-format=bestvideo[height<=?1080][fps<=?30][vcodec!=?vp9]+bestaudio/best

# subs
sub-use-margins=yes
sub-ass-force-margins=yes
sub-auto=fuzzy
sub-file-paths=ass:srt:sub:subs:subtitles:субтитры:сабы
embeddedfonts=yes
sub-auto=all
slang=en,eng,ru,rus
sub-font='Noto Sans Display'

# audio
#audio-pitch-correction=yes
alang=ja,jp,jpn,en,eng,ru,rus
replaygain=album

[protocol.https]
user-agent='{{ tor_browser_user_agent }}'

[protocol.http]
user-agent='{{ tor_browser_user_agent }}'

script-opts=ytdl_hook-ytdl_path=yt-dlp